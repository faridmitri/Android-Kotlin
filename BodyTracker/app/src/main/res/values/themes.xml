<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BodyTracker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="edit_text">
        <item name="startIconTint">@color/red</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="android:textColor">@color/purple_700</item>
    </style>

    <style name="customDatePickerStyle" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:datePickerStyle">@style/customDatePicker</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="android:textColorPrimary">@color/purple_700</item>
        <item name="colorControlNormal">@color/teal_200</item>


    </style>

    <style name="customDatePicker" parent="@android:style/Widget.Material.DatePicker">
        <item name="android:datePickerMode">spinner</item>
        <item name="android:calendarViewShown">false</item>


    </style>
</resources>